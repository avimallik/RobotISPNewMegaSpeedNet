<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7">

        <TextView
            android:id="@+id/itemAccStmtDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:padding="5dp"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/itemAccStmtClientName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:padding="5dp"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/itemAccStmtIP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:padding="5dp"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/itemAccStmtID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:padding="5dp"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/itemAccStmtCredit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:padding="5dp"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/itemAccStmtDebit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:padding="5dp"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/itemAccStmtBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:padding="5dp"
            android:textColor="@color/colorBlack"/>

    </LinearLayout>

    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_light_3"/>


</LinearLayout>
